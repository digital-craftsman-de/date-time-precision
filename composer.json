{
  "name": "digital-craftsman/datetime-parts",
  "description": "Utility wrapper for DateTimeImmutable to work with date and time",
  "type": "symfony-bundle",
  "require": {
    "php": "8.1.*|8.2.*",
    "symfony/framework-bundle": "^5.4|^6.0",
    "symfony/serializer": "^5.4|^6.0",
    "doctrine/dbal": "^3.4.0"
  },
  "require-dev": {
    "vimeo/psalm": "^4.12",
    "friendsofphp/php-cs-fixer": "^3.3",
    "phpunit/phpunit": "^9.5",
    "infection/infection": "^0.26.15"
  },
  "autoload": {
    "psr-4": {
      "DigitalCraftsman\\DateTimeParts\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DigitalCraftsman\\DateTimeParts\\": "tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Kolb",
      "email": "info@digital-craftsman.de"
    }
  ],
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
